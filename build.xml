<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="POS" default="build">
	<!-- Definitions of variables used during the rest of this script -->

	<property file="application.properties"/>

	<!-- Definitions of classpath variants used for different tasks -->

	<path id="compile.classpath">
		<fileset dir="lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<path id="run.classpath">
		<pathelement location="${build.classes.dir}"/>
		<pathelement location="${build.dir}/etc/img"/>
		<pathelement location="${build.dir}/conf"/>
		<pathelement location="${build.dir}"/>
		<fileset dir="${build.dir}/lib">
			<include name="*.jar"/>
		</fileset>
	</path>

	<!-- Definitions of runnable ant targets.
         Run them from the command line by executing "ant [targetname]"  -->

	<target name="clean" description="Remove files generated by the previous build">
		<delete dir="${build.dir}"/>
	</target>

	<target name="compile" description="Compiles the source files">
		<mkdir dir="${build.classes.dir}"/>
		<javac
			srcdir="${src.dir}"
			destdir="${build.classes.dir}"
			debug="true"
			debuglevel="lines,vars,source"
			encoding="utf-8"
			compiler="modern"
			target="1.7"
			source="1.7"
			includeantruntime="false">
			<classpath refid="compile.classpath"/>
		</javac>
	</target>
	
	<target name="build" depends="clean, compile" description="Build project">
		<copy todir="${build.dir}">
			<fileset dir="${basedir}" includes="*.properties"/>
		</copy>
		<copy todir="${build.dir}/etc/img">
			<fileset dir="${basedir}/etc/img"/>			
		</copy>
		<copy todir="${build.dir}/lib">
			<fileset dir="${lib.dir}" includes="*.jar"/>
		</copy>
		<copy todir="${build.dir}/conf">
			<fileset dir="${basedir}/etc" includes="log4j.xml"/>
		</copy>
	</target>
	

	<target name="run" depends="build" description="Execute application">
		<java classname="ee.ut.math.tvt.kvaliteetsedideed.Intro" fork="yes" classpathref="run.classpath"/>
	</target>

	<target name="dist" depends="build, increase-version" description="Create jar">
		<mkdir dir="${build.dir}/jar"/>  
		<!--<mkdir dir="${build.dir}/jar/etc"/>-->
		<mkdir dir="${build.dir}/jar/etc/img"/>  
		<copy todir="${build.dir}/jar/etc/img">
					<fileset dir="${basedir}/etc/img"/>	
				</copy>
		<jar destfile="${build.dir}/jar/Kvaliteetsed-Ideed.jar" >
			 <fileset dir="${build.dir}/classes" />
			 <fileset dir="${build.dir}" excludes="classes/**, lib/, jar/" />
			 <!--<zipfileset  includes="**/*.class" src="lib/log4j-1.2.17.jar"/>-->
			<restrict>
			     <name name="**/*.class"/>
			     <archives>
			       <zips>
			         <fileset dir="lib/" includes="**/*.jar"/>
			       </zips>
			     </archives>
			</restrict>
				<manifest>
			           <attribute name="Main-Class" value="ee.ut.math.tvt.kvaliteetsedideed.Intro"/>  	
				</manifest>
		</jar>
	</target>
	

	<target name="jrun" description="Execute jar">
		<java jar="build/jar/Kvaliteetsed-Ideed.jar" fork="true"/>
	</target>
	
	<target name="increase-version" description="Increase version number in version.porperties">
		<propertyfile file="version.properties">
			<entry key="build.revision.number" type="int" operation="+" default="1" />
		</propertyfile>		
		<property file="version.properties"/>
		<propertyfile file="version.properties">
			<entry key="build.number"  value="${build.major.number}.${build.minor.number}.${build.revision.number}"/>
		</propertyfile>
	</target>
</project>

